<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="aaaaaaaaaasaddddddddddddddddddddddddddddddddddddddaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaad"
            android:id="@+id/tv_question" android:layout_gravity="center" android:textSize="30dp"
            android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:maxLines="4"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hmm.. 0?"
            android:id="@+id/btn_option_1" android:layout_marginLeft="5dp" android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp" android:layout_marginRight="5dp" android:textSize="40dp"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="One?"
            android:id="@+id/btn_option_2" android:layout_marginLeft="5dp" android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp" android:layout_marginRight="5dp" android:textSize="40dp"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Two?"
            android:id="@+id/btn_option_3" android:layout_marginLeft="5dp" android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp" android:layout_marginRight="5dp" android:textSize="40dp"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Maybe 4?"
            android:id="@+id/btn_option_4" android:layout_marginLeft="5dp" android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp" android:layout_marginRight="5dp" android:textSize="40dp"/>
</LinearLayout>